uses  Plasmacore

class GGLabel : GGComponent
  PROPERTIES
    text   : String
    font   : Font

  METHODS
    method init( text, font=GGComponentManager.default_font, fixed_size=XY(0,0):XY, anchor=Anchor.CENTER:Anchor )
      font = font.cloned
      font.anchor = anchor
      size = fixed_size

    method on_draw
      if (anchor == Anchor.CENTER)
        font.draw( text, bounds, bounds.width )
      else
        font.draw( text, bounds.at(anchor) )
      endIf
endClass

